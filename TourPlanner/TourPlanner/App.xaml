<Application x:Class="TourPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TourPlanner"
             xmlns:viewModels="clr-namespace:TourPlanner.ViewModels"
             xmlns:views="clr-namespace:TourPlanner.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewModels:MainVm}">
            <views:MainView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:TourDetailsVm}">
            <views:TourDetailsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:AddTourVm}">
            <views:AddTourView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:EditTourVm}">
            <views:EditTourView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:AddLogVm}">
            <views:AddLogView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:EditLogVm}">
            <views:EditLogView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:FilePopupWindowVm}">
            <views:FilePopupWindow/>
        </DataTemplate>
    </Application.Resources>
</Application>



